{% extends 'base.html.twig' %}

{% block title %}Hello InscriptionController!{% endblock %}

{% block body %}
    <h2>Inscription</h2>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <h4>{{ form_errors(form) }}</h4>

    {{ form_start(form) }}
    <div class="form-group">
        {{ form_label(form.nom) }}
        {{ form_widget(form.nom) }}
        {{ form_help(form.nom) }}
    </div>
    <div class="form-group">
        {{ form_label(form.prenom) }}
        {{ form_widget(form.prenom) }}
        {{ form_help(form.prenom) }}
    </div>
    <div class="form-group">
        {{ form_label(form.email) }}
        {{ form_widget(form.email) }}
        {{ form_help(form.email) }}
    </div>
    <div class="form-group">
        {{ form_label(form.username) }}
        {{ form_widget(form.username) }}
        {{ form_help(form.username) }}
    </div>
    <div class="form-group">
    {{ form_label(form.password) }}
    {{ form_widget(form.password) }}
        {{ form_help(form.password) }}
    </div>
    <div class="form-group">
        {{ form_label(form.biere_favorite) }}
        {{ form_widget(form.biere_favorite) }}
        {{ form_help(form.biere_favorite) }}
    </div>
    <div class="form-group">
        {{ form_label(form.date_naissance)}}
        {{ form_widget(form.date_naissance)}}
        {{ form_help(form.date_naissance) }}
    </div>
    <div class="form-group">
        {{ form_label(form.telephone) }}
        {{ form_widget(form.telephone) }}
        {{ form_help(form.telephone) }}
    </div>
    <div class="form-group">
        {{ form_label(form.adresse_id) }}
        {{ form_widget(form.adresse_id) }}
        {{ form_help(form.adresse_id) }}
    </div>
    <div class="form-group">
        <input type="submit" name="Ajouter" class="btn btn-primary" value="Ajouter">
    </div>
    {{ form_end(form) }}
{% endblock %}
